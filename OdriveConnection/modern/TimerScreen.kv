<TimerScreen>:


    on_enter: root.timer_update_thread()

    color: 1,1,1,1
    name: 'TimerScreen'

    timer: timer



    FloatLayout:
        size_hint: None, None


    Label:
        id:timer
        text: "Time: "
        pos_hint:{"x":0,"y": 0}
        color: 0, 0, 0, 1
        font_size: 100


    ImageButton:
        id: CesarCounterClockWise
        size: 180, 228
        pos_hint:{"x":0.78,"y": 0.6}
        source: 'images/CounClockWise.png'

    ImageButton:
        id: HarlowClockwise
        size: 190, 238
        pos_hint:{"x":0,"y": 0.6}
        source: 'images/Clockwise.png'

    Label:
        id: HarlowLabelLeft
        font_size: 50
        pos_hint:{"x":-0.22,"y": 0.33}
        text: 'Left!'
        color: 0,0,0,1

    Label:
        id: CesarLabelRight
        font_size: 50
        pos_hint:{"x":0.22,"y": 0.33}
        text: 'Right!'
        color: 0,0,0,1

    ImageButton:
        id: ArjunMiddle
        size: 190, 238
        pos_hint:{"x":0,"y": 0}
        source: 'images/Stop.png'

    Label:
        id: ArjunLabekl
        font_size: 50
        pos_hint:{"x":-0.22,"y": -0.33}
        text: 'Stop!'
        color: 0,0,0,1


